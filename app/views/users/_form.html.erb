          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td style="text-align: right;width: 40%;">
          <%= f.label :email %>
        </td>
        <td style="text-align: left;">
          <%= f.text_field :email %>
        </td>
      </tr>
      <tr>
        <td style="text-align: right;width: 40%;">
          <%= f.label :password %>
        </td>
        <td style="text-align:left ;">
          <%= f.password_field :password %>
        </td>
      </tr>
      <tr>
        <td style="text-align: right;width: 40%;">
          <%= f.label :password_confirmation %>
        </td>
        <td style="text-align: left;">
          <%= f.password_field :password_confirmation %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <div class="actions">
            <%= f.submit %>
          </div>
        </td>
      </tr>
    </table>
